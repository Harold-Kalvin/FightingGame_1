<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.theapplication">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icon_lf"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="Lovely Fight"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Battle"
            android:label="Lovely fight"
            android:parentActivityName=".CharacterSelection"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.android.theapplication.MainActivity" />
        </activity>
        <activity
            android:name=".CharacterSelection"
            android:label="Select your lovely fighters"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.android.theapplication.MainActivity" />
        </activity>
        <activity
            android:name=".CharacterSelection1"
            android:label="Select your lovely fighter"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.android.theapplication.MainActivity" />
        </activity>
        <activity
            android:name=".Battle1"
            android:label="Lovely fight"
            android:parentActivityName=".CharacterSelection1"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.android.theapplication.CharacterSelection1" />
        </activity>
    </application>

</manifest>
